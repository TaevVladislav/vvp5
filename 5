#include <iostream>
#include <cmath>
using namespace std;

int main()
{
	int x1, y1, x2, y2, x3, y3;
	cin >> x1;
	cin >> y1;
	cin >> x2;
	cin >> y2;
	cin >> x3;
	cin >> y3;
	float a = sqrt(pow(x2 - x1, 2)+ pow(y2 - y1, 2));
	float b = sqrt(pow(x3 - x2, 2) + pow(y3 - y2, 2));
	float c = sqrt(pow(x1 - x3, 2) + pow(y1 - y3, 2));
	float p = (a + b + c) / 2;
	float P = a + b + c;
	float S = sqrt(p * (p - a) * (p - b) * (p - c));
	cout << "P = " << P << endl;
	cout << "S = " << S << endl;
}
